<h1>Your Todos!</h1>

<table>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td>-</td>
        <td><%= todo.name %></td>
        <td style="padding-left: 33px;"><%= link_to 'show', todo %></td>
        <td><%= link_to 'edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
